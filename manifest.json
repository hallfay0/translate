{
    "manifest_version": 2,
    "name": "Translate To English",
    "version": "1.0",
    "description": "自动将输入的文本翻译成英文并替换原内容",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "https://translate.googleapis.com/"
    ],
    "commands": {
        "translate_and_replace": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Command+Shift+T"
            },
            "description": "翻译并替换当前输入框中的文本"
        }
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}

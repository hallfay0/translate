{
  "manifest_version": 2,
  "name": "Translate To English",
  "version": "1.0",
  "description": "自动将输入的文本翻译成英文并替换原内容",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://translate.googleapis.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
